{
    "version": 2,
    "builds": [
      {
        "src": "Portfolio/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "300mb", "runtime": "python3.9" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "productionfiles"  
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/productionfiles/$1"  
      },
      {
        "src": "/(.*)",
        "dest": "Portfolio/wsgi.py"  
      }
    ]
  }